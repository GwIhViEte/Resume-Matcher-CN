{
  "version": 2,
  "builds": [
    {
      "src": "apps/frontend/next.config.ts",
      "use": "@vercel/next",
      "config": { "workPath": "apps/frontend" }
    },
    {
      "src": "apps/backend/app/main.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api_be/:path*",
      "destination": "/apps/backend/app/main.py"
    }
  ]
}
